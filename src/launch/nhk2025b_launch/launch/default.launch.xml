  <node_container pkg="rclcpp_components" exec="component_container" name="nhk2025b_default_container" namespace="">
    <composable_node pkg="nhk2025b_map_publisher" plugin="map_publisher::map_publisher" name="map_publisher">
      <param name="is_red" value="$(var is_red)"/>
    </composable_node>
    <composable_node pkg="nhk2025b_visualize_swerve" plugin="visualize_swerve::visualize_swerve" name="visualize_swerve"/>
  </node_container>
  <include file="$(find-pkg-share nhk2025b_launch)/launch/tf.launch.xml"/>
</launch>